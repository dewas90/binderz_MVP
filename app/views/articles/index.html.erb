<h1>All article</h1>

<div class="container">
  <div class="row">
    <% @articles.each do |article| %>
    <ul>
      <h2><%= article.title %></h2>
      <li><%= article.text %></li>
      <%= link_to "Show", article_path(article) , class: "btn btn-primary" %>
      <%= link_to "Edit", edit_article_url(article), class: "btn btn-info" %>
      <%= link_to "Delete", article_path(article.id), method: :delete, class:"btn btn-warning", data: {confirm: "Are you sure you want to delete this article?"} %>
    </ul>

    <% end %>
  </div>
</div>
