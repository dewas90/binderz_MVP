<h1>All article</h1>

<div class="container">
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Hash</th>
          <th>Button</th>
        </tr>
      </thead>
      <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.text_hash %></td>
          <td>
            <%= link_to "Show", article_path(article) , class: "btn btn-xs btn-primary" %>
            <%= link_to "Edit", edit_article_url(article), class: "btn btn-xs btn-info" %>
            <%= link_to "Delete", article_path(article.id), method: :delete, class:"btn btn-xs btn-warning", data: {confirm: "Are you sure you want to delete this article?"} %>
          </td>
        </tr>
        <% end  %>
      </tbody>
    </table>
  </div>
</div>
</div>
